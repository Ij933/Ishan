def binary_search(arr,l,r,x):
        while l<=r:
                mid=l+(r-1)//2;

                if arr[mid]==x:
                        return mid
                elif arr[mid]<x:
                        l=mid+1
                else:
                        r=mid-1

        return -1


list=[2,4,3,5,6,7]
list.sort()
res=binary_search(list,0,len(list)-1,int(input("enter value")))
if res==-1:
        print("value not found")
else:
        print("value found at index ",res)

